<div class="container">
	<div class="row">
		<h1>New</h1>

		<%= form_for @house do |f| %>
			<div class="form-group row">
				<%= f.label :house_type , class: "col-sm-2 col-form-label" %>
				<div class= "col-sm-10">
					<%= f.select :house_type, [['Apartment', 'Apartment']], {},class: "form-control" %>
				</div>
			</div>
		<div class="form-group row">
			<%= f.label :rooms, class: "col-sm-2 col-form-label" %>
			<div class= "col-sm-10">
				<%= f.text_field :rooms, class: "form-control" %>
			</div>
		</div>
		<div class="form-group row">
			<%= f.label :price, class: "col-sm-2 col-form-label" %>
			<div class= "col-sm-10">
				<%= f.text_field :price, class: "form-control" %>
			</div>
		</div>
	  <div class="form-group row">
	    <div class="col-sm-10">
				<%= f.submit "Submit House", class: "btn btn-primary" %>
			</div>
		</div>

		<% end  %>
	</div>
</div>
